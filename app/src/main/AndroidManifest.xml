<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ui">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ai.trivia.hk.ui.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">

        <activity
            android:name="ai.trivia.hk.ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <activity android:name="ai.trivia.hk.ui.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ai.trivia.hk.ui.activities.ForegroundActivity" />

        <activity android:name="ai.trivia.hk.ui.activities.TestActivity">

        </activity>

        <service
            android:name="ai.trivia.hk.ui.services.Floating"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="ai.trivia.hk.ui.services.OCRFloating"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="ai.trivia.hk.ui.services.option4.OCRFloating4"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="ai.trivia.hk.ui.Accessibility"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:process=":service">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilty" />
        </service>

        <activity
            android:name="ai.trivia.hk.ui.activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="ai.trivia.hk.ui.activities.ProfileActivity"
            android:label="@string/title_activity_profile" />

        <activity
            android:name="ai.trivia.hk.ui.activities.CropActivity"
            android:label="@string/title_activity_crop"
            android:theme="@style/NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>